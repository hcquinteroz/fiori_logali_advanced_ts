<mvc:View
    controllerName="com.acme.employees.controller.Details"
    xmlns="sap.m"
    xmlns:uxap="sap.uxap"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc">

    <uxap:ObjectPageLayout >
        <uxap:headerTitle>
            <uxap:ObjectPageDynamicHeaderTitle >
                <uxap:expandedContent>
                </uxap:expandedContent>
                <uxap:snappedContent>
                </uxap:snappedContent>
                <uxap:expandedHeading>
                    <Title text="{employees>FirstName} {employees>LastName} ({employees>EmployeeID})" />
                </uxap:expandedHeading>
                <uxap:snappedHeading>
                    <FlexBox fitContainer="true" alignItems="Center">
                        <Title text="{employees>FirstName} {employees>LastName} ({employees>EmployeeID})" />
                    </FlexBox>
                </uxap:snappedHeading>
            </uxap:ObjectPageDynamicHeaderTitle>
        </uxap:headerTitle>
<!--        <uxap:headerContent>
        </uxap:headerContent>
        <uxap:sections>
        </uxap:sections> -->
    </uxap:ObjectPageLayout>

</mvc:View>
