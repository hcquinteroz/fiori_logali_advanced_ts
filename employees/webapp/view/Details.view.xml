<mvc:View
    controllerName="com.acme.employees.controller.Details"
    xmlns="sap.m"
    xmlns:uxap="sap.uxap"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc">

    <uxap:ObjectPageLayout >
        <uxap:headerTitle>
            <uxap:ObjectPageDynamicHeaderTitle >
                <uxap:expandedContent>
                    <HBox>
                        <HBox justifyContent="SpaceAround"
                              width="100%">
                            <VBox width="6.5rem"
                                  alignItems="Center"
                                  justifyContent="Center">
                                <Label text="{i18n>country}:" class="boldElement" />
                                <Text text="{employees>Country}" />
                            </VBox>
                            <VBox width="6.5rem"
                                  alignItems="Center"
                                  justifyContent="Center">
                                <Label text="{i18n>city}:" class="boldElement" />
                                <Text text="{employees>City}" />
                            </VBox>
                            <VBox width="6.5rem"
                                 alignItems="Center"
                                 justifyContent="Center">
                                <Label text="{i18n>postalCode}:" class="boldElement" />
                                <Text text="{employees>PostalCode}" />
                            </VBox>
                        </HBox>
                    </HBox>
                </uxap:expandedContent>
                <uxap:snappedContent>
                    <HBox>
                        <HBox justifyContent="SpaceAround"
                              width="100%">
                            <VBox width="6.5rem"
                                  alignItems="Center"
                                  justifyContent="Center">
                                <Label text="{i18n>country}:" class="boldElement" />
                                <Text text="{employees>Country}" />
                            </VBox>
                            <VBox width="6.5rem"
                                  alignItems="Center"
                                  justifyContent="Center">
                                <Label text="{i18n>city}:" class="boldElement" />
                                <Text text="{employees>City}" />
                            </VBox>
                            <VBox width="6.5rem"
                                 alignItems="Center"
                                 justifyContent="Center">
                                <Label text="{i18n>postalCode}:" class="boldElement" />
                                <Text text="{employees>PostalCode}" />
                            </VBox>
                        </HBox>
                    </HBox>
                </uxap:snappedContent>
                <uxap:expandedHeading>
                    <Title text="{employees>FirstName} {employees>LastName} ({employees>EmployeeID})" />
                </uxap:expandedHeading>
                <uxap:snappedHeading>
                    <FlexBox fitContainer="true" alignItems="Center">
                        <Title text="{employees>FirstName} {employees>LastName} ({employees>EmployeeID})" />
                    </FlexBox>
                </uxap:snappedHeading>
                <uxap:actions>
                    <Button text="{i18n>create}"
                            press="onCreatePress"
                            type="Emphasized" 
                            width="6rem"/>
                    <Button icon="sap-icon://decline"
                            press="onClosePress"
                            type="Reject" />
                </uxap:actions>
            </uxap:ObjectPageDynamicHeaderTitle>
        </uxap:headerTitle>
<!--        <uxap:headerContent>
        </uxap:headerContent>-->
        <uxap:sections>
            <uxap:ObjectPageSection>
                <uxap:subSections>
                    <uxap:ObjectPageSubSection title="{i18n>incidence}">
                        <uxap:blocks>
                            <Panel id="tableIncidence" />
                        </uxap:blocks>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
        </uxap:sections> 
    </uxap:ObjectPageLayout>

</mvc:View>
