<mvc:View
    controllerName="com.acme.employees.controller.Container"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:mvc="sap.ui.core.mvc">

    <f:FlexibleColumnLayout id="container-fcl"
                            layout="{view>/layout}">
        <f:beginColumnPages>
            <mvc:XMLView id="master"
                        viewName="com.acme.employees.view.Master"
                        type="XML" />
        </f:beginColumnPages>
        <f:midColumnPages>
            <mvc:XMLView id="details"
                         viewName="com.acme.employees.view.Details"
                         type="XML" />
        </f:midColumnPages>
    </f:FlexibleColumnLayout>

</mvc:View>
